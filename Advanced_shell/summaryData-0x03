#!/bin/bash

# Directory containing JSON files
INPUT_DIR="pokemon_data"
REPORT_FILE="pokemon_report.csv"

# Check if the directory exists
if [ ! -d "$INPUT_DIR" ]; then
    echo "Error: Directory '$INPUT_DIR' does not exist."
    exit 1
fi

# Start the CSV file
echo "Name,Height (m),Weight (kg)" > "$REPORT_FILE"

# Loop through each JSON file and extract data
for FILE in "$INPUT_DIR"/*.json; do
    name=$(jq -r '.name' "$FILE" | sed 's/.*/\u&/')
    height=$(jq '.height' "$FILE" | awk '{printf "%.1f", $1 / 10}')
    weight=$(jq '.weight' "$FILE" | awk '{printf "%.1f", $1 / 10}')
    echo "$name,$height,$weight" >> "$REPORT_FILE"
done

# Display report location
echo "CSV Report generated at: $REPORT_FILE"
echo ""

# Print the report content
cat "$REPORT_FILE"

# Calculate averages using awk (skip header)
awk -F',' 'NR>1 {h+=$2; w+=$3; c++} END {
    printf "\nAverage Height: %.2f m\n", h/c
    printf "Average Weight: %.2f kg\n", w/c
}' "$REPORT_FILE"

