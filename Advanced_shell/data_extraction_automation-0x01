#!/bin/bash

# Check if data.json exists
if [ ! -f "data.json" ]; then
  echo "Error: data.json not found. Run the API fetch script first."
  exit 1
fi

# Extract and format data
name=$(jq -r '.name' data.json | sed 's/.*/\u&/')                    # Capitalize name
type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')     # Capitalize first type
weight=$(jq '.weight' data.json | awk '{print $1/10}')              # Convert to kg
height=$(jq '.height' data.json | awk '{print $1/10}')              # Convert to meters

# Format numbers to 1 decimal place (remove trailing .0 if needed)
formatted_weight=$(echo "$weight" | awk '{printf "%g", $1}')
formatted_height=$(echo "$height" | awk '{printf "%.1f", $1}')

# Output result
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."

