#!/bin/bash

# Check if data.json exists
if [ ! -f "data.json" ]; then
  echo "Error: data.json not found. Run the API fetch script first."
  exit 1
fi

# Extract name, height, weight, and type using jq
name=$(jq -r '.name' data.json | sed 's/.*/\u&/') # Capitalize first letter
height=$(jq '.height' data.json | awk '{printf "%.1f", $1/10}') # Convert to meters
weight=$(jq '.weight' data.json | awk '{printf "%d", $1/10}') # Convert to kg
type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/') # First type, capitalized

# Output in human-readable format
echo "$name is of type $type, weighs ${weight}kg, and is ${height}m tall."
